<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="10dp"
    android:elevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:id="@+id/Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School Information"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"/>

        <!-- Basic Info -->
        <TextView
            android:id="@+id/schoolName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="School Name: XYZ High School"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/schoolAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: 123, Main Street"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Date_of_Checkup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of Checkup: 12 Aug 2024"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/childName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Child Name: "
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/dateOfBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Date Of Birth: "
            android:textColor="@android:color/black"/>


    <LinearLayout
        android:id="@+id/fullInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/teacher_incharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incharge"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/Father_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Father Name"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/Mother_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mother Name"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/ContactNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/Weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/circumference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="circumference"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/MUAC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MUAC"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/Info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Defects At Birth"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            />
        <TextView
            android:id="@+id/defectsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Child Name" />
        <TextView
            android:id="@+id/Info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deficiency Screening"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            />
        <TextView
            android:id="@+id/deficienciesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Deficiencies" />
        <TextView
            android:id="@+id/Info3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Development Delays"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            />
        <TextView
            android:id="@+id/developmentalDelaysTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developmental Delays Data"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/Info4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preliminary Findings"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            />
        <TextView
            android:id="@+id/findingsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Findings will be listed here..."
            android:textSize="16sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/referredDoctorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Referred Doctor:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/remarkTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remark:"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_imagr_available"/>

    </LinearLayout>
        <TextView
            android:id="@+id/ReadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read More..."
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:textColor="@color/primary_color"
            android:paddingEnd="8dp"/>
        <!-- Read More & Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="12dp">



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGeneratePDF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="Generate PDF"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShareWithParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share with Parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
