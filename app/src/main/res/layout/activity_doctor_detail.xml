<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        app:title="School Health"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/baseline_arrow_back_24" />



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_height="match_parent">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewAdmin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:shapeAppearance="@style/ShapeAppearanceOverlay1.Rounded"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_person_24" />

    <!-- Name -->
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Dr. John Doe"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black" />

    <!-- Phone Number -->
    <TextView
        android:id="@+id/textViewPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="(123) 456-7890"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black" />

    <!-- Address -->
    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="123 Health Street, City, State"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black" />

    <!-- Education -->
    <TextView
        android:id="@+id/textViewEducation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="M.D. in General Medicine"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black" />

    <!-- Professional Experience -->
    <TextView
        android:id="@+id/textViewProfessionalExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="10+ Years of Experience"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black" />

    <!-- Email -->
    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="email@example.com"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/baseline_arrow_back_24" />
</LinearLayout>
