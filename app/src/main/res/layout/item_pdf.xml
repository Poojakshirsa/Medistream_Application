<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
android:elevation="20dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- PDF Icon -->
        <ImageView
            android:id="@+id/pdfIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_picture_as_pdf_24"
            android:contentDescription="PDF Icon"
            android:layout_marginEnd="12dp"
            app:tint="@color/primary_color" />

        <!-- PDF Name -->
        <TextView
            android:id="@+id/tvPdfName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sample PDF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:maxLines="1"
            android:ellipsize="end"/>

        <!-- Open Button -->
        <ImageView
            android:id="@+id/btnOpenPdf"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_open_in_new_24"
            android:contentDescription="Open PDF"
            android:padding="4dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
